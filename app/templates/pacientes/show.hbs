<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
      <div class="page-header">
        <h1 class="text-info">{{model.nome}} <small>Paciente</small></h1>
      </div>
      <ul class="list-group">
        <div class="btn-group btn-group-justified" role="group" aria-label="...">
          {{#link-to 'pacientes.edit' model.id class="btn btn-primary btn-lg"}}
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            Editar Paciente
          {{/link-to}}
        </div>
        <li class="list-group-item">Nome: {{model.nome}}</li>
        <li class="list-group-item">Telefone: {{model.telefone}}</li>
        <li class="list-group-item">Consultório: {{model.consultorio_preferencia.nome}} </li>
        <li class="list-group-item">Email: {{model.email}}</li>
        <li class="list-group-item">CPF: {{model.cpf}}</li>
        <li class="list-group-item">Endereço: {{model.endereco}}</li>
        <li class="list-group-item">CEP: {{model.cep}}</li>
        <li class="list-group-item">Indicado por: {{model.quem_indicou}}</li>
      </ul>

    </div>
  </div>
</div>
