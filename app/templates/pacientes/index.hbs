<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<div class="page-header">
		  	<h1 class="text-info">Pacientes</h1>
		  </div>
			<div class="btn-group btn-group-justified" role="group" aria-label="...">
				{{#link-to 'pacientes.new' class="btn btn-primary btn-lg"}}
					<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
					Adicionar Paciente
				{{/link-to}}
			</div>
		  <ul class="list-group lista-pacientes">
			  {{#each model as |paciente|}}
					{{#link-to 'pacientes.show' paciente class="list-group-item"}}
					 <h4 class="list-group-item-heading">{{paciente.nome}} </h4>
					 <p class="list-group-item-text">{{paciente.telefone}}</p>
					{{/link-to}}

				{{/each}}
		  </ul>

		</div>
	</div>
</div>



