<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<div class="page-header">
		  	<h1 class="text-info">Atendimentos</h1>
		  </div>
		  <div class="btn-group btn-group-justified" role="group" aria-label="...">
				{{#link-to 'atendimentos.new' class="btn btn-primary btn-lg"}}
					<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
					Adicionar Atendimento
				{{/link-to}}
			</div>
			<ul class="list-group">
				{{#each model as |atendimento|}}
					{{#link-to 'atendimentos.show' atendimento class="list-group-item"}}
					 <h4 class="list-group-item-heading">{{atendimento.nome}} </h4>
					{{/link-to}}

				{{/each}}
			</ul>
		</div>
	</div>

</div>