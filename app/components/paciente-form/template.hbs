{{#bs-form formLayout="horizontal" model=paciente}}
  {{bs-form-element controlType="text" label="Nome" placeholder="Insira nome" value=model.nome  property="nome" required=true}}
  {{bs-form-element controlType="text" label="Celular" placeholder="Insira número" value=model.telefone  property="telefone" required=true}}
  {{bs-form-element controlType="email" label="Email" placeholder="Insira Email" value=model.email  property="email"}}
  {{bs-form-element controlType="text" label="CPF" placeholder="Insira CPF" value=model.cpf  property="cpf"}}
  {{bs-form-element controlType="text" label="CEP" placeholder="Insira CEP" value=model.cep  property="cep"}}
  {{bs-form-element controlType="textarea" label="Endereço" placeholder="Insira Endereço completo" value=model.endereco  property="endereco"}}
  {{bs-form-element controlType="text" label="Indicado Por" placeholder="Nome" value=model.quem_indicou  property="quem_indicou"}}
  {{link-to  "cancela" 'pacientes' class="bs-button"}}
  {{bs-button defaultText=buttonText type="primary" buttonType="submit" action="submitAction"}}
{{/bs-form}}