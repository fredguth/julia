{{#bs-form formLayout="horizontal" model=model}}
  {{#each model.descriptions as |description|}}
    {{#unless (eq description.type 'select')}}
      {{bs-form-element
            controlType=description.type
            label=description.label
            placeholder=description.placeholder
            value=description.value
            property=description.key
      }}
    {{else}}
    {{!-- {{bs-form-element
            controlType='text'
            label='XXXXXXXXX'
            placeholder='XXXXXXXXX'

      }} --}}
      {{#bs-form-element
        label=description.label
        property=description.key
      }}
          {{#power-select selected=model.selected options=description.options placeholder=description.placeholder onchange=(action "select") as |option|}}
            {{option.nome}}
          {{/power-select}}

      {{/bs-form-element}}
    {{/unless}}
  {{/each}}


  {{link-to  "Cancela" cancelRoute class="bs-button"}}
  {{bs-button defaultText=buttonText type="primary" buttonType="submit" action="submitAction"}}
{{/bs-form}}