{{#bs-form formLayout="horizontal" model=atendimento}}

  {{#bs-form-element
      label='Paciente:'
      disabled = disabled
      property='paciente'
  }}
    {{#power-select
        selected=paciente
        options=pacientes
        matcher = matcher
        placeholder='Escolha o paciente'
        onchange=(action (mut paciente)) as |option|
    }}
      {{option.nome}} - {{option.telefone}}
    {{/power-select}}

  {{/bs-form-element}}
  {{!-- {{#bs-form-element}}
  {{paciente.telefone}}

  {{/bs-form-element}} --}}

  {{#bs-form-element
      label='Consultorio:'
      disabled = disabled
      property='consultorio'
  }}
    {{#power-select
        selected=consultorio
        options=consultorios
        matcher = matcher
        placeHolder=consultorio.nome
        onchange=(action (mut consultorio)) as |option|
    }}
      {{option.nome}}
    {{/power-select}}

  {{/bs-form-element}}

  <hr/>
  {{#bs-form-element
      label='Data:'
      disabled = disabled
      property='horario'
  }}
    {{pick-a-date date=(readonly horario) on-selected=(action (mut horario)) placeholder="Pick a date" options=(readonly extraPickadateOptions)}}

  {{/bs-form-element}}
  {{#bs-form-element
      label='Horário:'
      disabled = disabled
      property='horario'
  }}
  {{pick-a-time date=(readonly horario) on-selected=(action (mut horario)) placeholder="Pick a time" options=(readonly extraPickatimeOptions)}}
  {{/bs-form-element}}
  <hr/>

  {{bs-form-element
      label='Valor:'
      value=valor
      disabled = disabled
      property='valor'
  }}

  {{#bs-form-element
      label='Forma de Pagamento:'
      disabled = disabled
      property='formaPagamento'
  }}
    {{#power-select
        selected=formaPagamento
        options=formasDePagamento
        matcher = matcher
        placeHolder=formaPagamento.nome
        onchange=(action (mut formaPagamento)) as |option|
    }}
      {{option.nome}}
    {{/power-select}}

  {{/bs-form-element}}

  {{bs-form-element
      label='Obs:'
      controlType='text'
      placeholder='Qualquer observação'
      value=obs
      disabled = disabled
      property='obs'
  }}

  {{link-to  "Cancela" cancelRoute class="bs-button"}}
  {{bs-button defaultText=buttonText type="primary" buttonType="submit" action="submitAction"}}
{{/bs-form}}